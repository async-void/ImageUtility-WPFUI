<Page
    x:Class="ImageUtility.Views.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ImageUtility.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Width="Auto"
    Height="Auto"
    Margin="20,0"
    HorizontalAlignment="Left"
    d:DataContext="{d:DesignInstance local:DashboardPage,
                                     IsDesignTimeCreatable=False}"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Viewbox Stretch="Uniform"
             VerticalAlignment="Top">
        
   
    <Grid HorizontalAlignment="Center"
          VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />

        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" HorizontalAlignment="Center"
                    VerticalAlignment="Top">

            <!--#region  HEADER IMAGE-->

                <Border
                    Width="900"
                    Height="180"
                    Margin="0,0,0,20"
                    CornerRadius="16"
                    SnapsToDevicePixels="True">
                    <Border.Background>
                        <ImageBrush ImageSource="/Assets/Images/dashboard.jpg" Stretch="UniformToFill" />
                    </Border.Background>
                </Border>

            <!--#endregion-->

            <!--#region CARDS-->

                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">

                    <Border Margin="5" HorizontalAlignment="Center"
                            Style="{StaticResource HoverableBorderStyle}">
                        <Grid
                            Width="200"
                            Height="190"
                            HorizontalAlignment="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                HorizontalAlignment="Center"
                                FontSize="20"
                                FontWeight="Bold"
                                Text="Dashboard" />
                            <TextBlock
                                Grid.Row="1"
                                HorizontalAlignment="Center"
                                FontStyle="Italic"
                                Text="Information about the Dashboard"
                                TextWrapping="Wrap" />
                            <ui:Button
                                Grid.Row="2"
                                Margin="0,10,0,10"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Bottom"
                                Background="{DynamicResource SuccessGradientBrush}"
                                Command="{Binding ViewModel.NavigateCommand}"
                                CommandParameter="dashboard"
                                Content="View Dashboard"
                                CornerRadius="14" />
                        </Grid>
                    </Border>

                    <Border Margin="5" HorizontalAlignment="Center"
                            Style="{StaticResource HoverableBorderStyle}">
                        <Grid
                            Width="200"
                            Height="190"
                            HorizontalAlignment="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                HorizontalAlignment="Center"
                                FontSize="20"
                                FontWeight="Bold"
                                Text="Settings" />
                            <TextBlock
                                Grid.Row="1"
                                HorizontalAlignment="Center"
                                FontStyle="Italic"
                                Text="Information about the Settings"
                                TextWrapping="Wrap" />
                            <ui:Button
                                Grid.Row="2"
                                Margin="0,10,0,10"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Bottom"
                                Background="{DynamicResource BlueGradientBrush}"
                                Command="{Binding ViewModel.NavigateCommand}"
                                CommandParameter="settings"
                                Content="View Settings"
                                CornerRadius="14" />
                        </Grid>
                    </Border>

                    <Border Margin="5" HorizontalAlignment="Center"
                            Style="{StaticResource HoverableBorderStyle}">
                        <Grid
                            Width="200"
                            Height="190"
                            HorizontalAlignment="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                HorizontalAlignment="Center"
                                FontSize="20"
                                FontWeight="Bold"
                                Text="Contact Us" />
                            <TextBlock
                                Grid.Row="1"
                                HorizontalAlignment="Center"
                                FontStyle="Italic"
                                Text="Information to Contact Us"
                                TextWrapping="Wrap" />
                            <ui:Button
                                Grid.Row="2"
                                Margin="0,10,0,10"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Bottom"
                                Background="{DynamicResource DangerGradientBrush}"
                                Command="{Binding ViewModel.NavigateCommand}"
                                CommandParameter="contact_us"
                                Content="Contact Us"
                                CornerRadius="14" />
                        </Grid>
                    </Border>

                </StackPanel>

            <!--#endregion-->

        </StackPanel>

    </Grid>
    </Viewbox>
</Page>
