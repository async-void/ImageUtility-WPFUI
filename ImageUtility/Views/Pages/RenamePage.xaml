<Page
    x:Class="ImageUtility.Views.Pages.RenamePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ImageUtility.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Width="900"
    Height="Auto"
    Margin="20,0"
    HorizontalAlignment="Left"
    VerticalAlignment="Top"
    d:DataContext="{d:DesignInstance local:RenamePage,
                                     IsDesignTimeCreatable=False}"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="20" /> 
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        

        <!--#region LEFT CONTENT-->

        <Grid Grid.Column="0">

            <StackPanel>
                <ui:Card Width="600"
                         Height="Auto"
                         HorizontalAlignment="Left">
                    <StackPanel>
                      <!--#region DIRECTORIES -->
                        <ui:Card HorizontalContentAlignment="Left" 
                                 Background="{ui:ThemeResource CardBackgroundFillColorDefaultBrush}"
                                 Padding="8">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <ui:TextBox
                                        Width="500"
                                        Margin="4,0,0,4"
                                        Text="{Binding ViewModel.SourceDir, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        PlaceholderText="Source Directory" />
                                    <ui:Button
                                        Width="44"
                                        Height="34"
                                        Margin="4,0,0,4"
                                        Padding="0"
                                        Background="{x:Null}"
                                        BorderBrush="Transparent"
                                        Cursor="Hand"
                                        Command="{Binding ViewModel.SelectDirCommand, Mode=OneWay}"
                                        CommandParameter="source_dir">
                                        <ui:Button.Content>
                                            <ui:SymbolIcon Filled="True" 
                                                           Symbol="FolderOpen24" 
                                                           FontSize="28" 
                                                           Foreground="{DynamicResource BlueGradientBrush}"/>
                                        </ui:Button.Content>
                                    </ui:Button>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal">
                                    <ui:TextBox
                                        Width="500"
                                        Margin="4,0,0,4"
                                        Text="{Binding ViewModel.DestinationDir, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        PlaceholderText="Destination Directory" />
                                    <ui:Button 
                                        Width="44"
                                        Height="34"
                                        Margin="4,0,0,4"
                                        Padding="0"
                                        Background="{x:Null}"
                                        BorderBrush="Transparent"
                                        Cursor="Hand"
                                        Command="{Binding ViewModel.SelectDirCommand, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                        CommandParameter="destination_dir">
                                        <ui:Button.Content>
                                            <ui:SymbolIcon Filled="True"
                                                           Symbol="FolderOpen24"
                                                           FontSize="28"
                                                           Foreground="{DynamicResource BlueGradientBrush}"/>
                                        </ui:Button.Content>
                                    </ui:Button>
                                </StackPanel>
                            </StackPanel>
                        </ui:Card>
                        <!--#endregion -->

                      <!-- #region RENAME PATTERN -->
                        <ui:Card HorizontalContentAlignment="Left" 
                                 Background="{ui:ThemeResource CardBackgroundFillColorDefaultBrush}"
                                 Padding="8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="214" />
                                    <ColumnDefinition Width="1*" />
                                </Grid.ColumnDefinitions>
                                <ui:TextBlock Grid.Column="0"
                                              Text="Pattern"
                                              FontSize="16"
                                              Foreground="{DynamicResource BlueGradientBrush}" 
                                              VerticalAlignment="Center"
                                              Margin="10 0"/>
                                <ui:TextBox Grid.Column="2"
                                            Width="220"
                                            Text="{Binding ViewModel.Pattern}"
                                            PlaceholderText="ie. filename_{num}" />
                            </Grid>
                        </ui:Card>
                        <!--#endregion-->
                        
                      <!--#region USE NUMBERING-->

                        <ui:CardExpander HorizontalContentAlignment="Left" 
                                         Background="{ui:ThemeResource CardBackgroundFillColorDefaultBrush}"
                                         Padding="8">
                            <ui:CardExpander.Header>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="292" />
                                        <ColumnDefinition Width="1*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Numbering"
                                               FontSize="16"
                                               FontStyle="Oblique"
                                               Foreground="{DynamicResource BlueGradientBrush}"
                                               VerticalAlignment="Center"
                                               Margin="6 0"/>
                                    <CheckBox Grid.Column="1" 
                                              HorizontalAlignment="Right"/>
                                    <ui:NumberBox Grid.Column="2"
                                                  Width="120"
                                                  Minimum="0"
                                                  Maximum="10000"
                                                  HorizontalAlignment="Left"
                                                  Value="{Binding ViewModel.NumberingValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                </Grid>
                            </ui:CardExpander.Header>
                            <ui:CardControl Padding="10"
                                            Margin="-10 0"
                                            Background="{DynamicResource ApplicationBackgroundBrush}">
                                <ui:TextBlock TextWrapping="Wrap"
                                              Margin="-12 0 6 0"
                                              Foreground="{DynamicResource BlueGradientBrush}"
                                              Text="Use numbering - this is the number to start the renamer at"/>

                            </ui:CardControl>

                        </ui:CardExpander>
                        
                        <!--#endregion-->

                      <!-- #region OPEN DESTINATION ON COMPLETION -->
                        <ui:CardExpander HorizontalContentAlignment="Left" 
                                         Background="{ui:ThemeResource CardBackgroundFillColorDefaultBrush}"
                                         Padding="8">
                            <ui:CardExpander.Header>
                                <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="302" />
                                    <ColumnDefinition Width="1*" />
                                </Grid.ColumnDefinitions>
                                    <TextBlock Text="Open on Completion"
                                               FontSize="16"
                                               FontStyle="Oblique"
                                               Foreground="{DynamicResource BlueGradientBrush}"
                                               Margin="6 0"/>
                                    <ui:ToggleSwitch Grid.Column="2" 
                                                     
                                                     VerticalContentAlignment="Center"
                                                     Background="{DynamicResource BlueGradientBrush}"/>
                            </Grid>  
                            </ui:CardExpander.Header>
                            <ui:CardControl Padding="10"
                                            Margin="-10 0"
                                            Background="{DynamicResource ApplicationBackgroundBrush}">
                                <ui:TextBlock TextWrapping="Wrap"
                                              Margin="-12 0 6 0"
                                              Foreground="{DynamicResource BlueGradientBrush}"
                                              Text="Open the destination directory when renaming is complete."/>
                                
                            </ui:CardControl>
                            
                        </ui:CardExpander>
                        <!--#endregion-->

                      <!-- #region USE EXTERNAL TXT FILE -->
                        <ui:CardExpander HorizontalContentAlignment="Left" 
                                         Background="{ui:ThemeResource CardBackgroundFillColorDefaultBrush}"
                                         Padding="8">
                            <ui:CardExpander.Header>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="308" />
                                        <ColumnDefinition Width="1*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Use External Txt File"
                                               FontSize="16"
                                               FontStyle="Oblique"
                                               VerticalAlignment="Center"
                                               Foreground="{DynamicResource BlueGradientBrush}"
                                               Margin="6 0"/>
                                    <ui:Button Grid.Column="2" 
                                               VerticalContentAlignment="Center"
                                               Cursor="Hand"
                                               Icon="{ui:SymbolIcon Symbol=DocumentText24, Filled=True, FontSize=18}"
                                               Width="44"
                                               Command="{Binding ViewModel.LoadTextFileCommand, Mode=OneWay}"/>
                                </Grid>
                            </ui:CardExpander.Header>
                            <ui:CardControl Padding="10"
                                            Margin="-10 0"
                                            Background="{DynamicResource ApplicationBackgroundBrush}">
                                <ui:TextBlock TextWrapping="Wrap"
                                              Margin="-12 0 6 0"
                                              Foreground="{DynamicResource BlueGradientBrush}"
                                              Text="Use the Button to load an external .txt file into memory "/>

                            </ui:CardControl>

                        </ui:CardExpander>
                        <!--#endregion-->

                      <!--#region  COMMAND BUTTONS-->
                        <StackPanel Orientation="Horizontal"
                                  HorizontalAlignment="Right"
                                  Margin="0,10,0,0">
                            <ui:Button Icon="{ui:SymbolIcon Symbol=Delete28, Filled=True, FontSize=34}"
                                       Height="44"
                                       Margin="4,0,4,0"
                                       Background="{DynamicResource DangerGradientBrush}"
                                       BorderBrush="Transparent"
                                       Cursor="Hand"
                                       ToolTip="Clear all input fields"
                                       Command="{Binding ViewModel.ClearCommand, Mode=OneWay}"/>


                            <ui:Button Content="APPLY"
                                       Width="100"
                                       Height="44"
                                       Margin="4,0,0,0"
                                       Padding="0"
                                       Background="{DynamicResource SuccessGradientBrush}"
                                       BorderBrush="Transparent"
                                       Cursor="Hand"
                                       Command="{Binding ViewModel.ApplyCommand}"/>
                        </StackPanel>
                        <!--#endregion-->

                    </StackPanel>
                    
                </ui:Card>
  
            </StackPanel>

        </Grid>
        <!--#endregion-->

        <!--#region RIGHT CONTENT -->

        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <ui:Card Grid.Row="0"
                     Width="240"
                     HorizontalAlignment="Left">
                <StackPanel>
                    <TextBlock Text="Instructions" 
                               FontWeight="Bold" 
                               FontSize="16"
                               FontStyle="Oblique"
                               Foreground="{DynamicResource BlueGradientBrush}"
                               Margin="0,0,0,8" />
                    <TextBlock TextWrapping="Wrap"
                               FontStyle="Italic"
                               Foreground="{DynamicResource TextFillColorPrimaryBrush}">
                        <Run Text="1. Select the source directory containing the images you want to rename." />
                        <LineBreak />
                        <Run Text="2. Select the destination directory where the renamed images will be saved." />
                        <LineBreak />
                        <LineBreak />
                        <Run Text="NOTE: images in the source directory wil not be touched." />
                    </TextBlock>

                </StackPanel>
            </ui:Card>
        </Grid>

        <!--#endregion   -->
        
        
    </Grid>
   
</Page>
