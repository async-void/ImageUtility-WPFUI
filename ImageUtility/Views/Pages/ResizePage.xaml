<Page
    x:Class="ImageUtility.Views.Pages.ResizePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ImageUtility.Views.Pages"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ResizePage"
    Width="Auto"
    Height="Auto"
    mc:Ignorable="d">

    <Grid VerticalAlignment="Top"
          HorizontalAlignment="Left"
          Margin="20, 0"
          Width="800">

        <StackPanel Orientation="Vertical">
            
            <!--#region DIRECTORY-->
            <Border Style="{StaticResource HoverableBorderStyle}"
                    Padding="4">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="6"
                             ShadowDepth="2"
                             Direction="270"
                             Color="Black"
                             Opacity=".3" />
                </Border.Effect>
                <StackPanel>
                    <ui:Card 
                             Margin="0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition Width="3*" />
                            </Grid.ColumnDefinitions>
                            <ui:TextBlock Text="Source Dir:"
                                          FontStyle="Italic"
                                          VerticalAlignment="Center"
                                          Padding="6"/>
                            <StackPanel Grid.Column="2"
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Right">
                                <ui:TextBox Width="400"
                                            Height="32"
                                            Text="{Binding SourceDir}" />
                                <ui:Button Width="44"
                                           Margin="4,0,0,0"
                                           Padding="0"
                                           Background="{x:Null}"
                                           BorderBrush="Transparent"
                                           Command="{Binding ViewModel.SelectDirCommand, Mode=OneWay}"
                                           CommandParameter="source_dir"
                                           Cursor="Hand">
                                    <ui:Button.Content>
                                        <ui:SymbolIcon Filled="True"
                                                       FontSize="28"
                                                       Foreground="{DynamicResource BlueGradientBrush}"
                                                       Symbol="FolderOpen24" />
                                    </ui:Button.Content>
                                </ui:Button>
                            </StackPanel>


                        </Grid>
                    </ui:Card>
                    <ui:Card >
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition Width="3*" />
                            </Grid.ColumnDefinitions>
                            <ui:TextBlock Text="Destination Dir:"
                                          FontStyle="Italic"
                                          VerticalAlignment="Center"
                                          Padding="6"/>
                            <StackPanel Grid.Column="2"
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Right">
                                <ui:TextBox Width="400"
                                            Height="32"
                                            Text="{Binding DestinationDir}" />
                                <ui:Button Width="44"

                                           Margin="4,0,0,0"
                                           Padding="0"
                                           Background="{x:Null}"
                                           BorderBrush="Transparent"
                                           Command="{Binding ViewModel.SelectDirCommand, Mode=OneWay}"
                                           CommandParameter="source_dir"
                                           Cursor="Hand">
                                    <ui:Button.Content>
                                        <ui:SymbolIcon Filled="True"
                                                       FontSize="28"
                                                       Foreground="{DynamicResource BlueGradientBrush}"
                                                       Symbol="FolderOpen24" />
                                    </ui:Button.Content>
                                </ui:Button>
                            </StackPanel>
                           

                        </Grid>
                    </ui:Card>
                </StackPanel>
                

            </Border>
            <!--#endregion-->
            
            <!--#region  SIZEING-->
            <Border Style="{StaticResource HoverableBorderStyle}"
                    Height="Auto"
                    Margin="0 6">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="6"
                                        ShadowDepth="2"
                                        Direction="270"
                                        Color="Black"
                                        Opacity=".3" />
                </Border.Effect>
                <!--#region  HEIGHT-->
                <StackPanel VerticalAlignment="Center"
                            Margin="2, 4">
                    <ui:Card>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <ui:TextBlock Grid.Column="0"
                                          Text="Height"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Left"/>
                            <ui:NumberBox Grid.Column="1"
                                          Minimum="64"
                                          Maximum="3600" 
                                          Width="140"
                                          PlaceholderEnabled="False"
                                          PlaceholderText="Height"
                                          HorizontalAlignment="Right"/>
                        </Grid>

                    </ui:Card>
                    <!--#endregion-->
                    
                    <!--#region WIDTH-->
                    <ui:Card>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <ui:TextBlock Grid.Column="0"
                                          Text="Width"
                                          VerticalAlignment="Center"/>
                            <ui:NumberBox Grid.Column="1"
                                          Minimum="64"
                                          Maximum="3600" 
                                          Width="140"
                                          HorizontalAlignment="Right"/>
                        </Grid>

                    </ui:Card>
                    <!--#endregion-->
                    
                    <!--#region  RATIO-->
                    <ui:Card>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <ui:TextBlock Grid.Column="0"
                                          Text="Maintain Aspect Ratio"
                             VerticalAlignment="Center"/>
                            <CheckBox Grid.Column="1"
                                      Content="Maintain" 
                                      HorizontalAlignment="Right"/>

                        </Grid>

                    </ui:Card>
                    <!--#endregion-->
                    
                </StackPanel>
               
            </Border>
            <!--#endregion-->
            
            <!--#region  COMMANDS-->
            <Border Style="{StaticResource HoverableBorderStyle}"
                    Height="Auto"
                    Margin="0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="6"
                                      ShadowDepth="2"
                                      Direction="270"
                                      Color="Black"
                                      Opacity=".3" />
                </Border.Effect>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="8 ">
                    <ui:Button Content="{ui:SymbolIcon Symbol=Delete24, Filled=True, FontSize=36}" 
                               Style="{StaticResource DangerButtonSyle}"
                               Width="60"
                               Height="50"
                               Margin="10 0">
                    </ui:Button>
                    <ui:Button Content="APPLY" Width="100" Height="50"
                               Background="{DynamicResource SuccessGradientBrush}"/>
                </StackPanel>
            </Border>
            <!--#endregion-->

        </StackPanel>

    </Grid>
</Page>
