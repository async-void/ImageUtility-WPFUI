<Page
    x:Class="ImageUtility.Views.Pages.ResizePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ImageUtility.Views.Pages"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ResizePage"
    Width="Auto"
    Height="Auto"
    mc:Ignorable="d">

    <Grid VerticalAlignment="Top"
          HorizontalAlignment="Left"
          Margin="20, 0">

        <StackPanel Orientation="Vertical">
            
            <!--#region DIRECTORY-->
            <Border Style="{StaticResource HoverableBorderStyle}"
                    Width="600"
                    Height="140"
                    Margin="2">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="6"
                             ShadowDepth="2"
                             Direction="270"
                             Color="Black"
                             Opacity=".3" />
                </Border.Effect>
            </Border>
            <!--#endregion-->
            
            <!--#region  SIZEING-->
            <Border Style="{StaticResource HoverableBorderStyle}"
                    Width="600"
                    Height="Auto"
                    Margin="4">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="6"
                                        ShadowDepth="2"
                                        Direction="270"
                                        Color="Black"
                                        Opacity=".3" />
                </Border.Effect>
                <!--#region  HEIGHT-->
                <StackPanel VerticalAlignment="Center"
                            Margin="2, 4">
                    <ui:Card Margin="2"
                             Padding="10">
                        <Grid  >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <ui:TextBlock Grid.Column="0"
                                          Text="Height"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Left"/>
                            <ui:NumberBox Grid.Column="1"
                                          Minimum="64"
                                          Maximum="3600" 
                                          Width="140"
                                          PlaceholderEnabled="False"
                                          PlaceholderText="Height"
                                          HorizontalAlignment="Right"/>
                        </Grid>

                    </ui:Card>
                    <!--#endregion-->
                    
                    <!--#region WIDTH-->
                    <ui:Card Margin="2"
                             Padding="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <ui:TextBlock Grid.Column="0"
                                          Text="Width"
                                          VerticalAlignment="Center"/>
                            <ui:NumberBox Grid.Column="1"
                                          Minimum="64"
                                          Maximum="3600" 
                                          Width="140"
                                          HorizontalAlignment="Right"/>
                        </Grid>

                    </ui:Card>
                    <!--#endregion-->
                    
                    <!--#region  RATIO-->
                    <ui:Card Margin="2"

                             Padding="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <ui:TextBlock Grid.Column="0"
                                          Text="Maintain Aspect Ratio"
                             VerticalAlignment="Center"/>
                            <CheckBox Grid.Column="1"
                                      Content="Maintain" 
                                      HorizontalAlignment="Right"/>

                        </Grid>

                    </ui:Card>
                    <!--#endregion-->
                    
                </StackPanel>
               
            </Border>
            <!--#endregion-->
            
            <!--#region  COMMANDS-->
            <Border Style="{StaticResource HoverableBorderStyle}"
                    Width="600"
                    Height="80"
                    Margin="2">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="6"
                  ShadowDepth="2"
                  Direction="270"
                  Color="Black"
                  Opacity=".3" />
                </Border.Effect>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="10 0">
                    <ui:Button Content="CANCEL" Margin="6 0" Width="100" 
                               Background="{StaticResource DangerGradientBrush}"/>
                    <ui:Button Content="APPLY" Width="100"
                               Background="{StaticResource SuccessGradientBrush}"/>
                </StackPanel>
            </Border>
            <!--#endregion-->

        </StackPanel>

    </Grid>
</Page>
