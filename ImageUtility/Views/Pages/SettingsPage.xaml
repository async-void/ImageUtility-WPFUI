<Page
    x:Class="ImageUtility.Views.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:ImageUtility.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:ImageUtility.Helpers"
    xmlns:local="clr-namespace:ImageUtility.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    d:DataContext="{d:DesignInstance local:SettingsPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d"
    Height="Auto">
    <Page.Resources>
        <helpers:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />
        <converters:BoolToThemeConverter x:Key="boolToThemeConverter" />
    </Page.Resources>

    <StackPanel Margin="20,0">
        <ui:CardExpander Header="Personalization">
            <ui:Card>
                <StackPanel VerticalAlignment="Top">
                    <TextBlock Margin="0,12,0,0" Text="Theme" />
                    <StackPanel Margin="0,10,0,10" Orientation="Horizontal">
                        <ui:SymbolIcon FontSize="24" Symbol="WeatherMoon24" />
                        <ui:ToggleSwitch Margin="10" Command="{Binding ViewModel.ToggleThemeCommand}" />
                        <ui:SymbolIcon FontSize="24" Symbol="WeatherSunny24" />
                    </StackPanel>
                </StackPanel>
            </ui:Card>
        </ui:CardExpander>

        <ui:CardExpander Header="About">
            <TextBlock Margin="0,12,0,0" Text="{Binding ViewModel.AppVersion, Mode=OneWay}" />
        </ui:CardExpander>
    </StackPanel>
</Page>
