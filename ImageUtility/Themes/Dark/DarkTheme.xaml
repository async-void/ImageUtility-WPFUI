<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- COLORS -->

    <Color x:Key="PrimaryGray">#1E1E1E</Color>
    <Color x:Key="SecondaryGray">#2d2d2d</Color>
    <Color x:Key="AccentGray">#3e3e3e</Color>
    <Color x:Key="LightGray">#E1E1E1</Color>
    <Color x:Key="PrimaryBlue">#2A82DA</Color>
    <Color x:Key="LightBlue">#3B99FF</Color>
    <Color x:Key="PrimaryRed">#FF0000</Color>
    <Color x:Key="LightRed">#FC2F2F</Color>
    <Color x:Key="PrimaryGreen">#3c8e34</Color>
    <Color x:Key="LightGreen">#4fb743</Color>

    <!-- BRUSHES -->
    
    <SolidColorBrush x:Key="PrimaryGrayBrush" Color="{StaticResource PrimaryGray}" />
    <SolidColorBrush x:Key="SecondaryGrayBrush" Color="{StaticResource SecondaryGray}" />
    <SolidColorBrush x:Key="PrimaryRedBrush" Color="{StaticResource PrimaryRed}" />
    <SolidColorBrush x:Key="LightRedBrush" Color="{StaticResource LightRed}" />
    <SolidColorBrush x:Key="PrimaryGreenBrush" Color="{StaticResource PrimaryGreen}" />
    <SolidColorBrush x:Key="LightGreenBrush" Color="{StaticResource LightGreen}" />

    <!-- GRADIENTS -->
    
    <LinearGradientBrush x:Key="TitlePrimaryGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource PrimaryGray}" Offset="0.0" />
        <GradientStop Color="{StaticResource SecondaryGray}" Offset="1.0" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="BlueGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource PrimaryBlue}" Offset="0.0" />
        <GradientStop Color="{StaticResource LightBlue}" Offset="1.0" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="DangerGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource PrimaryRed}" Offset="0.0" />
        <GradientStop Color="{StaticResource LightRed}" Offset="1.0" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="SuccessGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource PrimaryGreen}" Offset="0.0" />
        <GradientStop Color="{StaticResource LightGreen}" Offset="1.0" />
    </LinearGradientBrush>

</ResourceDictionary>